<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/num_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ac"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="AC" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/negative"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+/-" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/percentage"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="%" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seven"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/eight"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/nine"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/four"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/five"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/six"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/two"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/three"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zero"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="40sp" />


            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/point"
                style="@style/Num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="." />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/operator_layout"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/except"
            style="@style/Operator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="รท" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/ride"
            style="@style/Operator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ร" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/reduce"
            style="@style/Operator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/plus"
            style="@style/Operator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/equal"
            style="@style/Operator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="=" />

    </LinearLayout>
</LinearLayout>